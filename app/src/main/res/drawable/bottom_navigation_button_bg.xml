<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон кнопки -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Цвет фона кнопки -->
            <corners android:radius="0dp" /> <!-- Установите радиус углов в 0dp, чтобы убрать круглую форму -->
        </shape>
    </item>

    <!-- Тень кнопки -->
    <item android:id="@+id/shadow">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Прозрачный фон для тени -->
            <corners android:radius="0dp" /> <!-- Установите радиус углов в 0dp, чтобы убрать круглую форму -->
            <padding android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="8dp" /> <!-- Отступ для создания тени -->
        </shape>
    </item>
</layer-list>
